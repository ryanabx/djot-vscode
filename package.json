{
  "name": "djot-vscode",
  "displayName": "djot-vscode",
  "description": "djot language support for vscode",
  "license": "MIT",
  "publisher": "ryanabx",
  "author": "ryanabx, wisim3000, contributors",
  "repository": "https://github.com/ryanabx/djot-vscode",
  "bugs": "https://github.com/ryanabx/djot-vscode/issues/new",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Programming Languages",
    "Other",
    "Visualization"
  ],
  "activationEvents": [],
  "capabilities": {
  },
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
				"command": "djot.saveHTML",
				"title": "%djot.saveHTML.title%",
				"category": "Djot",
				"icon": "$(globe)"
			}
    ],
    "languages": [
      {
        "id": "djot",
        "aliases": [
          "Djot",
          "djot"
        ],
        "extensions": [
          ".dj",
          ".djot"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "djot",
        "scopeName": "source.djot",
        "path": "./syntaxes/djot.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
      "[djot]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
          "other": "off",
          "comments": "off",
          "strings": "inline"
        }
      }
    },
    "configuration": {
      "title": "Djot Marker",
      "properties": {
        "djot.usingBuiltInShortcuts.essential": {
          "type": "boolean",
          "default": true,
          "description": "Default:\nCtrl+I --> Italic\nCtrl+B --> Bold"
        }
      }
    },
    "keybindings": [
      {
        "command": "editor.action.insertSnippet",
        "key": "ctrl+b",
        "mac": "cmd+b",
        "when": "editorTextFocus && !editorReadonly && editorLangId == djot && config.djot.usingBuiltInShortcuts.heading",
        "args": {
          "snippet": "*${TM_SELECTED_TEXT:$1}*"
        }
      },
      {
        "command": "editor.action.insertSnippet",
        "key": "ctrl+i",
        "mac": "cmd+i",
        "when": "editorTextFocus && !editorReadonly && editorLangId == djot && config.djot.usingBuiltInShortcuts.heading",
        "args": {
          "snippet": "_${TM_SELECTED_TEXT:$1}_"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.92.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@djot/djot": "^0.3.1"
  }
}
